<?xml version="1.0" encoding="utf-8"?>
<airmazing.airmazing.views.FeedbackAvgView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/defaultBlue"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10sp"

        >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"

        >
        <ImageView
            android:src="@drawable/indifferent"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:id="@+id/feedbackAvgIcon"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="\?"
            android:padding="10sp"
            android:id="@+id/feedbackAvgText"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <include layout="@layout/feedback_avg_subview" android:id="@+id/day1" />
        <include layout="@layout/feedback_avg_subview" android:id="@+id/day2" />
        <include layout="@layout/feedback_avg_subview" android:id="@+id/day3" />
        <include layout="@layout/feedback_avg_subview" android:id="@+id/day4" />
        <include layout="@layout/feedback_avg_subview" android:id="@+id/day5" />
        <include layout="@layout/feedback_avg_subview" android:id="@+id/day6" />
        <include layout="@layout/feedback_avg_subview" android:id="@+id/day7" />

    </LinearLayout>



    </LinearLayout>

        <include layout="@layout/loading_layout" />

</FrameLayout>
</airmazing.airmazing.views.FeedbackAvgView

>