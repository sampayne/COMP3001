<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="5sp"

    >

    <ImageButton
        android:alpha="0.7"
        android:layout_width="0dp"
        android:background="#00000000"
        android:src="@drawable/very_sad"
        android:layout_weight=".2"
        android:scaleType="fitCenter"
        android:layout_height="match_parent"
        android:id="@+id/feedbackButton1"
        android:layout_gravity="center"
        android:padding="2dp"
        />

    <ImageButton         android:scaleType="fitCenter"

        android:alpha="0.7"
        android:background="#00000000"
        android:src="@drawable/sad"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/feedbackButton2"
        android:layout_weight=".2"
        android:layout_gravity="center"
        android:padding="2dp"
        />

    <ImageButton         android:scaleType="fitCenter"

        android:alpha="0.7"
        android:background="#00000000"
        android:src="@drawable/indifferent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:id="@+id/feedbackButton3"
        android:layout_gravity="center"
        android:padding="2dp"
        />

    <ImageButton         android:scaleType="fitCenter"

        android:alpha="0.7"
        android:background="#00000000"
        android:src="@drawable/happy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:id="@+id/feedbackButton4"
        android:layout_gravity="center"
        android:padding="2dp"
        />

    <ImageButton
        android:scaleType="fitCenter"
        android:alpha="0.7"
        android:background="#00000000"
        android:src="@drawable/very_happy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:id="@+id/feedbackButton5"
        android:layout_gravity="center"
        android:padding="2dp"
        />
</LinearLayout>